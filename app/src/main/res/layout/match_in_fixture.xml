<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:weightSum="8">
		<ImageView
			android:id="@+id/home_Teams"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="2.5"
			android:padding="2dp"
			android:src="@drawable/ic_verified_user_black_24dp"
			android:layout_gravity="center"/>
		<TextView
			android:id="@+id/home_Scores"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1.5"
			android:text="Home Score"
			android:textColor="@color/textOptional"
			android:textSize="15sp"
			android:padding="2dp"/>
		<TextView
			android:id="@+id/away_Scores"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1.5"
			android:textColor="@color/textOptional"
			android:text="Away Score"
			android:textSize="15sp"
			android:padding="2dp"/>
		<ImageView
			android:id="@+id/away_Teams"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="2.5"
			android:padding="2dp"
			android:src="@drawable/ic_verified_user_black_24dp"
			android:layout_gravity="center"/>
	</LinearLayout>
</com.google.android.material.card.MaterialCardView>